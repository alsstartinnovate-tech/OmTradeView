<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:layout_marginBottom="@dimen/five"
            android:foregroundGravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/seven"
            android:paddingBottom="@dimen/seven"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/lay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foregroundGravity="left"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/five"
                    android:paddingLeft="@dimen/five"
                    android:text="Crudeoil_20July2021"
                    android:textColor="@color/slate_900"
                    android:textSize="@dimen/ts_forteen" />

                <TextView
                    android:id="@+id/tvexpirydate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/five"
                    android:layout_marginTop="@dimen/one"
                    android:paddingLeft="@dimen/five"
                    android:text="Crudeoil_20July2021"
                    android:textColor="@color/slate_900"
                    android:textSize="@dimen/ts_twelve" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/four"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/four"
                        android:gravity="center"
                        android:paddingLeft="@dimen/five"
                        android:text="Sold By Trader"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/soldtrader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/four"
                        android:gravity="center"
                        android:background="@drawable/back_round_red"
                        android:paddingLeft="@dimen/seven"
                        android:paddingRight="@dimen/seven"
                        android:textColor="@color/red_900"
                        android:textSize="@dimen/ts_twelve" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/four"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/five"
                        android:singleLine="true"
                        android:text="asdasdas"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <TextView
                        android:id="@+id/ordertype_sold"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/twenty"
                        android:layout_marginStart="@dimen/five"
                        android:background="@drawable/back_round_red"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingLeft="@dimen/seven"
                        android:paddingRight="@dimen/seven"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Market"
                        android:textColor="@color/red_900"
                        android:textSize="@dimen/ts_twelve" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_lotname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lay_name"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingBottom="@dimen/three">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/marketrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_marginTop="@dimen/two"
                        android:layout_marginRight="@dimen/five"
                        android:background="@drawable/back_round_green"
                        android:paddingLeft="@dimen/seven"
                        android:paddingRight="@dimen/seven"
                        android:text="-100/-2"
                        android:textColor="@color/green_400"
                        android:textSize="@dimen/ts_seventeen"
                        android:visibility="gone" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/profitloss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_marginTop="@dimen/two"
                        android:layout_marginRight="@dimen/five"
                        android:background="@drawable/back_round_green"
                        android:paddingLeft="@dimen/seven"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:paddingRight="@dimen/seven"
                        android:text="-100/-2"
                        android:textColor="@color/green_400"
                        android:textSize="@dimen/ts_fifteen" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/marketquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_marginTop="@dimen/two"
                        android:layout_marginRight="@dimen/five"
                        android:background="@drawable/back_round_green"
                        android:paddingLeft="@dimen/seven"
                        android:paddingRight="@dimen/seven"
                        android:text="-100/-2"
                        android:textColor="@color/green_400"
                        android:textSize="@dimen/ts_fifteen" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/five"
                    android:paddingLeft="@dimen/five"
                    android:textColor="@color/slate_900"
                    android:textSize="@dimen/ts_twelve" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/four"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="@dimen/five"
                        android:text="Bought By Trader"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <TextView
                        android:id="@+id/boughttrader"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/back_round_green"
                        android:paddingLeft="@dimen/seven"
                        android:paddingRight="@dimen/seven"
                        android:textColor="@color/green_400"
                        android:textSize="@dimen/ts_twelve" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/four"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/date_bought"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/five"
                        android:singleLine="true"
                        android:text="asdasdas"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <TextView
                        android:id="@+id/ordertype_bought"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/twenty"
                        android:layout_marginStart="@dimen/five"
                        android:background="@drawable/back_round_red"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingLeft="@dimen/seven"
                        android:paddingRight="@dimen/seven"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Market"
                        android:textColor="@color/red_900"
                        android:textSize="@dimen/ts_twelve" />

                </LinearLayout>

                <TextView
                    android:id="@+id/marginused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three"
                    android:layout_marginRight="@dimen/two"
                    android:text="Margin used 23063"
                    android:textColor="@color/slate_900"
                    android:textSize="@dimen/ts_eleven"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/holding_marginrequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/two"
                    android:text="Holding Margin Req. 23037"
                    android:textColor="@color/slate_900"
                    android:textSize="@dimen/ts_eleven"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/cardview"
        android:background="@color/green_900" />

</RelativeLayout>



