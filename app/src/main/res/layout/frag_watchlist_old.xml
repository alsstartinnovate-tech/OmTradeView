<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_actionbar"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/teal_primary_light"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/slate_300" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchwatchlist"
        android:layout_width="0dp"
        android:layout_height="@dimen/fortyfive"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/five"
        android:layout_marginEnd="@dimen/ten"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/teal_primary_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/three">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/thirtyfive"
                android:padding="@dimen/seven"
                android:src="@drawable/search"
                app:tint="@color/grey_600" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/five"
                android:text="Search &amp; Add"
                android:textColor="@color/teal_primary"
                android:textSize="@dimen/ts_thirteen" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_lotterylist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/five"
        android:orientation="vertical"
        android:paddingLeft="@dimen/ten"
        android:paddingTop="@dimen/five"
        android:paddingRight="@dimen/ten"
        android:scrollbars="none"
        android:scrollingCache="true"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchwatchlist"
        tools:itemCount="10"
        tools:listitem="@layout/item_watchlist" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_comingsoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_loading"
        android:textColor="@color/slate_900"
        android:textSize="@dimen/ts_twentyfive"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/forty"
        android:layout_marginTop="@dimen/twentyfive"
        android:background="@drawable/gradient_button_teal"
        android:elevation="8dp"
        android:text="Add Instrument"
        android:textColor="@color/white"
        android:visibility="gone"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_comingsoon" />

</androidx.constraintlayout.widget.ConstraintLayout>
