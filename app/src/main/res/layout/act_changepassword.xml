<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headlayout"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appbackcolor">


        <include
            android:id="@+id/lay_actionbar"
            layout="@layout/include_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/twenty" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lay_actionbar">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginRight="@dimen/twenty"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.64">

                    <ImageView

                        android:layout_width="119dp"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/coloredprofile"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_marginTop="@dimen/ten"
                        android:layout_marginRight="@dimen/five"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="@dimen/eight"
                        app:cardElevation="@dimen/seven">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/five"
                            android:orientation="vertical"
                            android:padding="@dimen/five">


                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_oldpass"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height"
                                android:background="@color/transparent"
                                android:drawableStart="@drawable/ic_baseline_lock_24"
                                android:drawablePadding="@dimen/seven"
                                android:drawableTint="@color/white"
                                android:hint="Existing Password"
                                android:inputType="textPassword"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/ts_seventeen" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_marginTop="@dimen/twenty"
                        android:layout_marginRight="@dimen/five"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="@dimen/eight"
                        app:cardElevation="@dimen/seven">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/five"
                            android:orientation="vertical"
                            android:padding="@dimen/five">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_newpass"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height"
                                android:background="@color/transparent"
                                android:drawableStart="@drawable/ic_baseline_lock_24"
                                android:drawablePadding="@dimen/ten"
                                android:drawableTint="@color/white"
                                android:hint="New Password"
                                android:inputType="textPassword"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/ts_seventeen" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_marginTop="@dimen/twenty"
                        android:layout_marginRight="@dimen/five"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="@dimen/eight"
                        app:cardElevation="@dimen/seven">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/five"
                            android:orientation="vertical"
                            android:padding="@dimen/five">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_newpass_again"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height"
                                android:background="@color/transparent"
                                android:drawableStart="@drawable/ic_baseline_lock_24"
                                android:drawablePadding="@dimen/ten"
                                android:drawableTint="@color/white"
                                android:hint="Confirm password"
                                android:inputType="textPassword"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/ts_seventeen" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@color/c_gray2"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_update"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fortyfive"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_marginTop="@dimen/thirty"
                        android:layout_marginRight="@dimen/five"
                        android:background="@drawable/rounded_corner_button"
                        android:backgroundTint="@color/buttoncolor"
                        android:text="Update Password"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ts_fifteen" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <include
            layout="@layout/include_connection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/twenty" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>