<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/seven"
        android:padding="@dimen/twentyfive"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/lay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/five"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="@dimen/two">

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GOLD"
                    android:textColor="@color/slate_900"
                    android:textSize="@dimen/ts_seventeen" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/seven"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/mcxdate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="15JULY,2021"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <TextView
                        android:id="@+id/tradernumb"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:background="@drawable/back_round"
                        android:backgroundTint="@color/red_200"
                        android:gravity="center"
                        android:text="3786"
                        android:textColor="@color/red_900"
                        android:textSize="@dimen/twelve"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/seven"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="CHG : "
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <TextView
                        android:id="@+id/chgno"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:gravity="center"
                        android:text="176"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/twelve" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/two"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:text="-100/-2"
                        android:textColor="@color/slate_900" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:text="QTY :1"
                        android:textColor="@color/slate_900" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:gravity="center"
                        android:text="3786"
                        android:textColor="@color/red_900" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/seven"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="H : "
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <TextView
                        android:id="@+id/hnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:gravity="center"
                        android:text="56748"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/twelve" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lay_name"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/two">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:background="@drawable/back_round"
                        android:backgroundTint="@color/red_200"
                        android:text="-100/-2"
                        android:textColor="@color/slate_900" />

                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:background="@drawable/back_round"
                        android:backgroundTint="@color/buttoncolor"
                        android:text="QTY :1"
                        android:textColor="@color/slate_900" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/seven"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mcxnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/back_dash_card"
                        android:backgroundTint="@color/green_500"
                        android:gravity="center"
                        android:padding="@dimen/five"
                        android:text="47018"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ts_fifteen" />

                    <TextView
                        android:id="@+id/bpughttradernumb"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:gravity="center"
                        android:text="3786"
                        android:textColor="@color/red_900"
                        android:textSize="@dimen/twelve"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/seven"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/datetwo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="LTP : "
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <TextView
                        android:id="@+id/ltpnumb"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:padding="@dimen/two"
                        android:text="4567"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lay_name"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/two">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:background="@drawable/back_round"
                        android:backgroundTint="@color/red_200"
                        android:text="-100/-2"
                        android:textColor="@color/slate_900" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:background="@drawable/back_round"
                        android:backgroundTint="@color/buttoncolor"
                        android:text="QTY :1"
                        android:textColor="@color/slate_900" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/seven"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mcxnumbertwo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="47018"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_fifteen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:gravity="center"
                        android:text="3786"
                        android:textColor="@color/red_900"
                        android:textSize="@dimen/twelve"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/seven"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ltp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="LTP : "
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <TextView
                        android:id="@+id/ltpnotwo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/back_dash_card"
                        android:backgroundTint="@color/buttoncolor"
                        android:gravity="center"
                        android:padding="@dimen/five"
                        android:text="4567"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>



