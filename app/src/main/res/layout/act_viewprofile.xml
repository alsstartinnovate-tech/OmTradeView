<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headlayout"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/lay_actionbar"
            layout="@layout/include_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/twenty" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lay_actionbar"
            android:background="@color/appbackcolor">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/seven"
                    android:padding="@dimen/twentyfive"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/ten"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/lay_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_dash_card"
                        android:orientation="vertical"
                        android:padding="@dimen/seven">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NSE"
                                android:textColor="@color/buttoncolor"
                                android:textSize="@dimen/ts_twenty" />

                            <TextView
                                android:id="@+id/nse_status"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/slate_900"
                                android:textSize="@dimen/ts_twenty" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_main_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/five"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Brokerage"
                                android:textColor="@color/buttoncolor"
                                android:textSize="@dimen/ts_seventeen" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/three">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginRight="@dimen/five"
                                    android:text="INR"
                                    android:textColor="@color/slate_900"
                                    android:textSize="@dimen/ts_eighteen"
                                    android:visibility="gone" />


                                <TextView
                                    android:id="@+id/txt_brokerage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:text="0"
                                    android:textColor="@color/slate_900"
                                    android:textSize="@dimen/ts_seventeen"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:id="@+id/view_one"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/one"
                            android:background="@color/buttoncolor" />

                        <LinearLayout
                            android:id="@+id/lay_aeps_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/five"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Margin Intraday"
                                android:textColor="@color/buttoncolor"
                                android:textSize="@dimen/ts_seventeen" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/three">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginRight="@dimen/five"
                                    android:text="INR"
                                    android:textColor="@color/slate_900"
                                    android:textSize="@dimen/ts_eighteen"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/txt_margin_intraday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:text="0"
                                    android:textColor="@color/slate_900"
                                    android:textSize="@dimen/ts_seventeen"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:id="@+id/view_two"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/one"
                            android:background="@color/buttoncolor" />

                        <LinearLayout
                            android:id="@+id/lay_commission_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Margin Holding"
                                android:textColor="@color/buttoncolor"
                                android:textSize="@dimen/ts_seventeen" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/three">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginRight="@dimen/five"
                                    android:text="INR"
                                    android:textColor="@color/c_white"
                                    android:textSize="@dimen/ts_eighteen"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/txt_margin_holding"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:text="0"
                                    android:textColor="@color/slate_900"
                                    android:textSize="@dimen/ts_seventeen"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview_head"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/seven"
                    android:padding="@dimen/twentyfive"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/ten"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_dash_card"
                        android:orientation="vertical"
                        android:padding="@dimen/seven">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MCX"
                                android:textColor="@color/buttoncolor"
                                android:textSize="@dimen/ts_twenty" />

                            <TextView
                                android:id="@+id/mcx_status"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/slate_900"
                                android:textSize="@dimen/ts_twenty" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/five"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Brokerage"
                                android:textColor="@color/buttoncolor"
                                android:textSize="@dimen/ts_seventeen" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/three">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_marginRight="@dimen/five"
                                    android:text="INR"
                                    android:textColor="@color/c_white"
                                    android:textSize="@dimen/ts_eighteen"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/txt_brokerage_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textAllCaps="false"
                                    android:textColor="@color/slate_900"
                                    android:textSize="@dimen/ts_eighteen"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:id="@+id/view_twelve"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/one"
                            android:background="@color/buttoncolor" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/five"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Margin Intraday"
                                android:textColor="@color/buttoncolor"
                                android:textSize="@dimen/ts_seventeen" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/three">

                                <TextView
                                    android:id="@+id/txt_margin_intraday_rule"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:text="0"
                                    android:textColor="@color/slate_900"
                                    android:textSize="@dimen/ts_seventeen"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:id="@+id/view_forteen"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/one"
                            android:background="@color/buttoncolor" />

                        <LinearLayout
                            android:id="@+id/lay_margin_holding_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Margin Holding"
                                android:textColor="@color/buttoncolor"
                                android:textSize="@dimen/ts_seventeen" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/three">

                                <TextView
                                    android:id="@+id/txt_margin_holding_rule"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:text="0"
                                    android:textColor="@color/slate_900"
                                    android:textSize="@dimen/ts_seventeen"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <include
            layout="@layout/include_connection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/twenty" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>