<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:scrollingCache="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/tradesnames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/searchwatchlist"
                    android:layout_width="@dimen/thirty"
                    android:layout_height="@dimen/thirty"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginBottom="@dimen/five"
                    android:background="@drawable/search" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tv_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MCX FUTURES"
                        android:textColor="@color/buttoncolor"
                        android:textSize="@dimen/fifteen" />

                    <TextView
                        android:id="@+id/tv_active"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="NSE FUTURES"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fifteen" />

                    <TextView
                        android:id="@+id/tv_closed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="OTHERS"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fifteen" />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_tradenames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/ten"
                    android:scrollbars="horizontal"
                    android:scrollingCache="true"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="10"
                    tools:listitem="@layout/item_tradelist" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_search"
                android:layout_width="370dp"
                android:layout_height="@dimen/edittext_height"
                android:layout_below="@+id/tradesnames"
                android:layout_marginLeft="@dimen/seventeen"
                android:layout_marginTop="@dimen/five"
                android:layout_marginRight="@dimen/seventeen"
                android:background="@drawable/back_dash_card"
                android:drawableRight="@drawable/search"
                android:drawablePadding="@dimen/ten"

                android:drawableTint="@color/white"
                android:hint="Search &amp; Add"
                android:inputType="text"
                android:padding="@dimen/ten"
                android:textColor="@color/slate_900"
                android:textColorHint="@color/slate_900"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/ts_fifteen" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mcxlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ed_search"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                android:padding="@dimen/ten"
                android:scrollbars="vertical"
                android:scrollingCache="true"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="10"
                tools:listitem="@layout/item_mcxfuture" />
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>