<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/appbackcolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lay_actionbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/lay_script"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fortyfive"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:padding="@dimen/three"
                android:visibility="gone"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/lay_tabmcxfuture"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/two">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_mcxfuture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="MCX FUTURES"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/ts_thirteen" />

                    <View
                        android:id="@+id/indicator_mcxfuture"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="@dimen/twenty"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginEnd="@dimen/twenty"
                        android:background="@drawable/back_viewpage_indicator" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_tabnsefuture"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/two">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_nsefuture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="NSE FUTURES"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/ts_fifteen" />

                    <View
                        android:id="@+id/indicator_nsefutures"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="@dimen/twenty"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginEnd="@dimen/twenty"
                        android:background="@drawable/back_viewpage_indicator"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_tabother"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/two">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_others"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="OTHERS"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/ts_fifteen" />

                    <View
                        android:id="@+id/indicator_other"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="@dimen/twenty"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginEnd="@dimen/twenty"
                        android:background="@drawable/back_viewpage_indicator"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbarheight"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/fifty"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/fifteen"
                    android:singleLine="true"
                    android:src="@drawable/back" />

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lay_script"
                    android:background="@drawable/back_edittext_search"
                    android:backgroundTint="@color/transparent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/three"
                    app:iconifiedByDefault="false"
                    app:queryHint="Search and Add"
                    app:searchHintIcon="@drawable/ic_round_search_24" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:layout_below="@+id/lay_top"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view">

                <ProgressBar
                    android:id="@+id/progressbar_load"
                    android:layout_width="@dimen/sixty"
                    android:layout_height="@dimen/sixty"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/five"
                    android:indeterminateDrawable="@drawable/progress_icon"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    tools:listitem="@layout/spinner_row_item" />

                <TextView
                    android:id="@+id/txt_comingsoon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifty"
                    android:gravity="center"
                    android:padding="@dimen/forty"
                    android:text="@string/label_loading"
                    android:textColor="@color/slate_900"
                    android:textSize="@dimen/ts_twentyfive"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>
        </RelativeLayout>

        <include
            layout="@layout/include_connection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/twenty" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>