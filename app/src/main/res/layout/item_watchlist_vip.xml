<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:foregroundGravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/two"
                android:weightSum="2.5">

                <LinearLayout
                    android:id="@+id/lay_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/two"
                    android:layout_toLeftOf="@+id/view_one"
                    android:foregroundGravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Garib Rath"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ts_seventeen" />

                    <TextView
                        android:id="@+id/tvotherprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:text="9:10AM"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ts_twelve" />
                </LinearLayout>

                <View
                    android:id="@+id/view_one"
                    android:layout_width="@dimen/two"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/two"
                    android:layout_marginTop="@dimen/two"
                    android:layout_marginEnd="@dimen/two"
                    android:layout_marginBottom="@dimen/two"
                    android:layout_toLeftOf="@+id/lay_lotname"
                    android:background="@color/buttoncolor" />

                <LinearLayout
                    android:id="@+id/lay_lotname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/five"
                    android:orientation="horizontal"
                    android:padding="@dimen/two">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_buy"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/five"
                        android:clickable="false"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="@dimen/three"
                        app:cardElevation="0dp">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/txt_buy"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/two"
                            android:singleLine="true"
                            android:clickable="false"
                            android:text="62589.25"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_seventeen" />
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="@dimen/two"
                        android:layout_height="@dimen/seven"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/four"
                        android:visibility="gone"
                        android:layout_marginEnd="@dimen/four"
                        android:background="@color/buttoncolor" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_sell"
                        android:layout_width="@dimen/seventyfive"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/five"
                        android:clickable="false"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="@dimen/three"
                        app:cardElevation="0dp">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/txt_sell"
                            android:layout_width="@dimen/seventyfive"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/two"
                            android:singleLine="true"
                            android:clickable="false"
                            android:text="23489.25"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_seventeen" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/two"
                android:orientation="horizontal"
                android:padding="@dimen/two"
                android:weightSum="4">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/txt_txttime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Change :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_eleven" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/txt_high"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/two"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="High : "
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_eleven" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/txt_low"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/two"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Low : "
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_eleven" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/txt_lastprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/five"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Ltp : "
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_eleven" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/cardview"
        android:background="@color/golden" />
</RelativeLayout>



