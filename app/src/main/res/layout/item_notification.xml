<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/seven"
        android:padding="@dimen/twentyfive"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five"
            android:orientation="vertical"
            android:padding="@dimen/five"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOLD"
                android:visibility="gone"
                android:textColor="@color/slate_900"
                android:textSize="@dimen/ts_seventeen" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="15JULY,2021"
                android:textColor="@color/slate_900"
                android:textSize="@dimen/ts_fifteen" />

            <TextView
                android:id="@+id/tvdate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CHG : "
                android:textColor="@color/slate_900"
                android:textSize="@dimen/ts_twelve" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>



