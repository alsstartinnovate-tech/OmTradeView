<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/lay_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbarheight"
        android:background="@drawable/gradient_actionbar"
        android:elevation="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirtyfive"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/five"
            android:contentDescription="@string/app_name"
            android:maxWidth="@dimen/seventyfive"
            android:scaleType="fitStart"
            android:src="@drawable/logo_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txt_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_menu"
            android:gravity="center_vertical"
            android:padding="@dimen/ten"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_twenty"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_colortheme"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:layout_centerVertical="true"
            android:padding="@dimen/seven"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/seven"
            android:layout_marginStart="@dimen/five"
            android:visibility="gone"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/theme" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/one"
            android:layout_marginEnd="@dimen/ten"
            android:layout_toStartOf="@+id/img_ewallet"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/two"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/thirtyfive"
                android:layout_height="@dimen/thirty"
                android:contentDescription="@string/app_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/toolbar_txt_walletbal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_dash_card"
                android:paddingStart="@dimen/fifteen"
                android:paddingTop="@dimen/four"
                android:paddingEnd="@dimen/fifteen"
                android:paddingBottom="@dimen/four"
                android:text="Status"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twelve"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/img_ewallet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/one"
            android:layout_marginEnd="@dimen/two"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/two">

            <ImageView
                android:layout_width="@dimen/thirtyfive"
                android:layout_height="@dimen/thirty"
                android:contentDescription="@string/app_name"
                android:src="@drawable/wallet_mcx"
                android:visibility="gone" />

            <TextView
                android:id="@+id/toolbar_txt_ewalletbal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_fifteen"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
