<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/lay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="@dimen/five">

                <TextView
                    android:id="@+id/txt_expirydate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Crudeoil_20July2021"
                    android:textColor="@color/slate_900"
                    android:textSize="@dimen/ts_ten"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_metal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="05May2021"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="Margin: "
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <TextView
                        android:id="@+id/marginused"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:gravity="center"
                        android:text="200"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="Holdin Margin: "
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <TextView
                        android:id="@+id/holdin_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:gravity="center"
                        android:text="200"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_lotname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/seven"
                android:layout_toRightOf="@+id/lay_name"
                android:foregroundGravity="center"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="@dimen/two">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/boughtorsell"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:text="Bought : "
                        android:textColor="@color/buttoncolor"
                        android:textSize="@dimen/ts_fifteen" />

                    <TextView
                        android:id="@+id/boughtqty"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:text="1@66557"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_fifteen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profitLoss"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/red_200"
                        android:gravity="center"
                        android:text="-25460"
                        android:textColor="@color/red_900"
                        android:textSize="@dimen/ts_fifteen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="CMP : "
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />

                    <TextView
                        android:id="@+id/datemarkettwo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five"
                        android:gravity="center"
                        android:text="66164"
                        android:textColor="@color/slate_900"
                        android:textSize="@dimen/ts_twelve" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cancel_order"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/thirty"
        android:layout_below="@+id/lyt_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/five"
        android:gravity="center"
        android:layout_marginRight="@dimen/two"
        android:background="@drawable/back_button_dark"
        android:backgroundTint="@color/red_900"
        android:paddingLeft="@dimen/fifteen"
        android:paddingRight="@dimen/fifteen"
        android:text="Close Order"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_fifteen" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/two"
        android:layout_below="@+id/cancel_order"
        android:background="@color/green_900" />
</RelativeLayout>